@using HRManagement.BLL.Concrete.ResultServiceBLL
@using HRManagement.Model.Enums
@using HRManagement.ViewModel.CompanyViewModel

@model CompanyVM
@{
    ViewData["Title"] = "CompaniesCreate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Au Register Forms by Colorlib</title>

    <!-- Icons font CSS-->
    <link href="~/formTemplate/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="~/formTemplate/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="~/formTemplate/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/formTemplate/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/formTemplate/css/main.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Şirket Oluştur</h2>
                    <form asp-action="CompaniesCreate" method="post">
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label type='hidden' asp-for="Name" class="control-label">Şirket İsmi</label>
                                    <input asp-for="Name" class="input--style-4" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label type='hidden' asp-for="TaxId" class="control-label">Vergi Numarası</label>
                                    <input asp-for="TaxId" class="input--style-4" />
                                    <span asp-validation-for="TaxId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="RegisterDate" class="control-label">Kuruluş Tarihi</label>
                                    <input asp-for="RegisterDate" class="input--style-4" />
                                    <span asp-validation-for="RegisterDate" class="text-danger"></span>
                                </div>
                                <div class="input-group">
                                    <label asp-for="DatePurchased" class="control-label">Paket Satınalma Tarihi</label>
                                    <input asp-for="DatePurchased" class="input--style-4" />
                                    <span asp-validation-for="DatePurchased" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="Address" class="control-label">Şirket Adresi</label>
                                    <textarea asp-for="Address" class="input--style-4"></textarea>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <label type='hidden' asp-for="UserId" class="control-label">Kullanıcı ID</label>
                                <input asp-for="UserId" class="input--style-4" />
                                <span asp-validation-for="UserId" class="text-danger"></span>

                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label type='hidden' asp-for="MailExtension" class="control-label">Mail Adresi</label>
                                    <input asp-for="MailExtension" class="input--style-4" />
                                    <span asp-validation-for="MailExtension" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <div class="rs-select2 js-select-simple select--no-search">

                                        <div class="form-group">
                                            <label asp-for="CompanyType" class="control-label">Şirket Ünvanı</label>
                                            <select asp-for="CompanyType" class="form-control" asp-items="Html.GetEnumSelectList<CompanyType>()"></select>
                                            <span asp-validation-for="CompanyType" class="text-danger"></span>
                                        </div>

                                        <div class="select-dropdown"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <div class="rs-select2 js-select-simple select--no-search">
                                        <div class="form-group">
                                            <label asp-for="PackageId" class="control-label">Satın Alınan Paket</label>
                                            <select asp-for="PackageId" class="form-control" asp-items="@(new SelectList(ViewBag.Packages))"></select>
                                            <span asp-validation-for="PackageId" class="text-danger"></span>
                                        </div>
                                        <div class="select-dropdown"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit">Oluştur</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Jquery JS-->
    <script src="~/formTemplate/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="~/formTemplate/vendor/select2/select2.min.js"></script>
    <script src="~/formTemplate/vendor/datepicker/moment.min.js"></script>
    <script src="~/formTemplate/vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="~/formTemplate/js/global.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>
<!-- end document-->
