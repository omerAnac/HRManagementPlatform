    <!-- Vendor CSS-->
    <link href="~/formTemplate/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/formTemplate/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/formTemplate/css/main.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Paket Oluşturma</h2>
                    <form asp-action="PacketCreate" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Duration" />
                        <div class="row row-space">
                            <div class="col-2">
                                <label type='hidden' asp-for="Name" class="control-label">Paket İsmi</label>
                                <input asp-for="Name" class="input--style-4" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="Price" class="control-label">Paket Fiyatı</label>
                                    <input asp-for="Price" class="input--style-4    " />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                    
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="StartDate" class="control-label">Başlangıç Tarihi</label>
                                    <input asp-for="StartDate" class="input--style-4" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                    
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="EndDate" class="control-label">Bitiş Tarihi</label>
                                    <input asp-for="EndDate" class="input--style-4 " />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        

                        <div class="input-group">
                            <label asp-for="Duration" class="control-label">Süresi</label>
                            <input asp-for="Duration" class="input--style-4" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>

                        <div class="input-group">
                            <label asp-for="UserNumber" class="control-label">Kullanıcı Numarası</label>
                            <input asp-for="UserNumber" class="input--style-4" />
                            <span asp-validation-for="UserNumber" class="text-danger"></span>
                        </div>
                        <div class="input-group">
                            <label asp-for="ImageURL" class="control-label">Resim</label>
                            <input asp-for="ImageURL" class="input--style-4" />
                            <span asp-validation-for="ImageURL" class="text-danger"></span>
                        </div>

                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit" value="Save">Oluştur</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="~/formTemplate/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="~/formTemplate/vendor/select2/select2.min.js"></script>
    <script src="~/formTemplate/vendor/datepicker/moment.min.js"></script>
    <script src="~/formTemplate/vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="~/formTemplate/js/global.js"></script>

        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

