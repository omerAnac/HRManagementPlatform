@using HRManagement.ViewModel.UserViewModels

@{
    ViewData["Title"] = "AddUser";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}
@model UserAddVM

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewData["Title"]</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/companyTemplate/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/companyTemplate/assets/css/style.css" rel="stylesheet">
    <style>
        section {
            margin-left: 300px;
            margin-top: 60px;
            padding: 20px 30px;
        }
       

        div.inline {
            display: inline-flex;
        }

        input.mail {
            width: 500px;
        }

        input.mailtag {
            width: auto;
        }
    </style>

</head>

<body>
    
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Personel Ekle</h5>

                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-octagon me-1"></i>
                            (*) Alanların Doldurulması Zorunludur!
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>

                        <!-- General Form Elements -->
                        <form enctype="multipart/form-data" asp-action="AddUser" method="post">
                            <div class="row mb-3">
                                <label  for="inputText" class="col-sm-2 col-form-label">İsim</label>
                                <div class="col-sm-10">
                                    <input asp-for="Name" type="text" placeholder="İsim Giriniz" class="form-control">
                                    
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label  for="inputText" class="col-sm-2 col-form-label">Soy İsim</label>
                                <div class="col-sm-10">
                                    <input asp-for="Surname" type="text"  placeholder="Soyisminizi Giriniz" class="form-control">
                                    
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label  for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                                <div class="inline col-sm-10">
                                    <input asp-for="Mail" placeholder="Email Giriniz" type="text" class="form-control">
                                    
                                </div>
                                
                            </div>

                            <div class="row mb-3">
                                <label  for="inputNumber" class="col-sm-2 col-form-label">TC</label>
                                <div class="col-sm-10">
                                    <input asp-for="TC" placeholder="TC Kimlik Numaranızı Giriniz" type="number" class="form-control">
                                    
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label  for="inputDate" class="col-sm-2 col-form-label">Doğum Tarihi</label>
                                <div class="col-sm-10">
                                    <input asp-for="BirthDate" type="date" class="form-control">
                                    
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label  class="col-sm-2 col-form-label">Depatman Bilgisi</label>
                                <div class="col-sm-10">
                                    <select asp-for="DepartmentID" class="form-control" ></select>
                                    
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label  for="inputText" class="col-sm-2 col-form-label">Ünvan</label>
                                <div class="col-sm-10">
                                    <input asp-for="Title" placeholder="Unvanınızı giriniz" type="text" class="form-control">
                                    
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label  for="inputDate" class="col-sm-2 col-form-label">Başlangıç Tarihi</label>
                                <div class="col-sm-10">
                                    <input asp-for="StartDate" type="date" class="form-control">
                                   
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label  for="inputNumber" class="col-sm-2 col-form-label">Telefon</label>
                                <div class="col-sm-10">
                                    <input asp-for="PhoneNumber" placeholder="Telefon Numaranızı Giriniz" type="number" class="form-control">
                                   
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label  for="inputPassword" class="col-sm-2 col-form-label">Adres</label>
                                <div class="col-sm-10">
                                    <textarea  asp-for="Adress" class="form-control" style="height: 100px"></textarea>
                                   
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label  for="inputNumber" class="col-sm-2 col-form-label">Profil Fotoğrafı</label>
                                <div class="col-sm-10">
                                    <input  asp-for="PhotoPath" class="form-control" type="file" id="formFile">
                                   
                                </div>
                            </div>
                            <br />
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Kaydet</button>  <button asp-controller="CompanyManager" asp-action="Index" class="btn btn-primary">Personel Listele</button>
                                </div>
                            </div>

                        </form><!-- End General Form Elements -->

                    </div>
                </div>

            </div>
        </div>
    </section>



    <!-- Vendor JS Files -->
    <script src="~/companyTemplate/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/chart.js/chart.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/quill/quill.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/companyTemplate/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

</body>

</html>

