
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewData["Title"]</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/companyTemplate/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/companyTemplate/assets/css/style.css" rel="stylesheet">
    <style>
        section {
            margin-left: 300px;
            margin-top: 60px;
            padding: 20px 30px;
        }


        div.inline {
            display: inline-flex;
        }

        input.mail {
            width: 500px;
        }

        input.mailtag {
            width: auto;
        }
    </style>

</head>

<body>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Personel Bilgileri</h5>

                        <!-- General Form Elements -->
                        <form asp-action="UpdateUser">
                            <div class="row mb-3">
                                <label @*asp-for="Name"*@>Ad</label> <br />
                                <input @*required asp-for="Name"*@ class="form-control" id="f4" />
                                <span @*asp-validation-for="Name"*@ class="form-text text-muted"></span>
                            </div>
                            <div class="row mb-3">
                                <label @*asp-for="Surname"*@>Soyad</label> <br />
                                <input @*required asp-for="Surname"*@ class="form-control" id="f4" />
                                <span @*asp-validation-for="Surname"*@ class="form-text text-muted"></span>
                            </div>

                            <div class="row mb-3">
                                <label @*asp-for="BirthDate"*@>Doğum Tarihi</label> <br />
                                <input @*required type="date" asp-for="BirthDate"*@ class="form-control" id="f4" /> <br />
                                <span @*asp-validation-for="BirthDate"*@ class="form-text text-muted"></span>
                            </div>
                            <div class="row mb-3">
                                <label @*asp-for="StartDate"*@>Başlangıç Tarihi</label> <br />
                                <input @*required type="date" asp-for="StartDate"*@ class="form-control" id="f4" /> <br />
                                <span @*asp-validation-for="StartDate"*@ class="form-text text-muted"></span>
                            </div>
                            <div class="row mb-3">
                                <label @*asp-for="EndDate"*@>Bitiş Tarihi</label> <br />
                                <input @*required type="date" asp-for="EndDate"*@ class="form-control" id="f4" /> <br />
                                <span @*asp-validation-for="EndDate"*@ class="form-text text-muted"></span>
                            </div>
                            <div class="row mb-3">
                                <label @*asp-for="Title"*@>Unvan</label> <br />
                                <input @*required asp-for="Title"*@ class="form-control" id="f4" /> <br />
                                <span @*asp-validation-for="Title"*@ class="form-text text-muted"></span>
                            </div>
                            <div class="row mb-3">
                                <label @*asp-for="DepartmentID"*@>Departman</label> <br />
                                <select @*asp-for="DepartmentID"*@ class="form-control" asp-items="ViewBag.DepartmentID"></select>
                            </div>
                            <div class="row mb-3">
                                <label @*asp-for="PhoneNumber"*@>Telefon</label> <br />
                                
                                    <span class="input-group-addon left"><i class="glyphicon glyphicon-earphone"></i> </span>
                                    <input @*required asp-for="PhoneNumber"*@ type="tel" class="form-control" id="f14" />
                                    <span @*asp-validation-for="PhoneNumber"*@ class="form-text text-muted"></span>
                                
                            </div>
                            <div class="row mb-3">
                                <label @*asp-for="Adress"*@>Adres</label> <br />
                                <textarea @*required asp-for="Adress"*@ class="form-control" id="f4"></textarea> <br />
                                <span @*asp-validation-for="Adress"*@ class="form-text text-muted"></span>
                            </div>
                            <div class="row mb-3">
                                <label @*asp-for="IsActive"*@>Aktiflik</label> <br />
                               
                                    <select @*asp-for="IsActive"*@ class="form-control" id="f4">
                                        @*<option value="true">Aktif</option>
                                        <option value="false">Pasif</option>*@
                                    </select>
                                    <span @*asp-validation-for="IsActive"*@ class="form-text text-muted"></span> <br />
                               
                                <div class="row mb-3">
                                    <div class="col-sm-10">
                                        <button type="submit" class="btn btn-success">Güncelle</button>
                                    </div>
                                </div>
                            </div>

                        </form><!-- End General Form Elements -->

                    </div>
                </div>

            </div>


        </div>
    </section>



    <!-- Vendor JS Files -->
    <script src="~/companyTemplate/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/chart.js/chart.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/quill/quill.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/companyTemplate/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

</body>

</html>

