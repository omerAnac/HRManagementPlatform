
@{
    ViewData["Title"] = "UserDetail";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewData["Title"]</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/companyTemplate/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/companyTemplate/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/companyTemplate/assets/css/style.css" rel="stylesheet">
    <style>
        section {
            margin-left: 300px;
            margin-top: 60px;
            padding: 20px 30px;
        }


        div.inline {
            display: inline-flex;
        }

        input.mail {
            width: 500px;
        }

        input.mailtag {
            width: auto;
        }
    </style>

</head>

<body>

    <section class="section profile">
        <div class="row">
            <div class="col-xl-4">

                <div class="card">
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                        <img  alt="Profile" class="rounded-circle">
                        <h2>@*@Model.FullName*@Taner</h2>
                        <h3>@*@Model.Unvan*@Company Manager</h3>

                        
                    @*<span class="badge bg-primary"> @Model.FullName</span>
                    <br>
                    <span class="badge bg-secondary">@Model.Unvan</span>*@
                        

                    </div>
                </div>

            </div>

            <div class="col-xl-8">

                <div class="card">
                    <div class="card-body pt-3">

                        <div class="tab-content pt-2">

                            <div class="tab-pane fade show active profile-overview" id="profile-overview">

                                <h5 class="card-title">Personel Detayı</h5>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label "><label @*asp-for="FullName"*@>Ad ve Soyad</label></div>
                                    <div class="col-lg-9 col-md-8"><label>@*@Model.FullName*@</label></div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label "><label @*asp-for="Email"*@>Email</label></div>
                                    <div class="col-lg-9 col-md-8"><a href="#">@*@Model.Email*@</a></div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label "><label @*asp-for="PhoneNumber"*@>Telefon</label></div>
                                    <div class="col-lg-9 col-md-8"><label>@*@Model.PhoneNumber*@</label></div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label "><label @*asp-for="TCKimlik"*@>TC</label></div>
                                    <div class="col-lg-9 col-md-8"><label>@*@Model.TCKimlik*@</label></div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label "><label @*asp-for="BirthDate"*@>Doğum Tarihi</label></div>
                                    <div class="col-lg-9 col-md-8"><label>@*@Model.BirthDate*@</label></div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label "><label @*asp-for="Unvan"*@>Unvan</label></div>
                                    <div class="col-lg-9 col-md-8"><label>@*@Model.Unvan*@</label></div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label "><label @*asp-for="Departman"*@>Departman</label></div>
                                    <div class="col-lg-9 col-md-8"><label>@*@Model.Departman*@</label></div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label "><label @*asp-for="StartDate"*@>Başlangıç</label></div>
                                    <div class="col-lg-9 col-md-8"><label>@*@Model.StartDate*@</label></div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label "><label @*asp-for="EndDate"*@>Bitiş</label></div>
                                    <div class="col-lg-9 col-md-8"><label>@*@Model.EndDate*@</label></div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label "><label @*asp-for="Address*@">Adres</label></div>
                                    <div class="col-lg-9 col-md-8"><label>@*@Model.Address*@</label></div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label "><label @*asp-for="IsActive*@">Aktiflik</label></div>
                                    <div class="col-lg-9 col-md-8"><label>@*@Model.IsActive*@</label></div>
                                </div>
                               
                                    <button type="button" class="btn btn-primary btn-sm">Güncelle</button>
                               

                            </div>

                            <div class="tab-pane fade pt-3" id="profile-change-password">


                            </div>

                        </div><!-- End Bordered Tabs -->

                    </div>
                </div>

            </div>
        </div>
    </section>



    <!-- Vendor JS Files -->
    <script src="~/companyTemplate/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/chart.js/chart.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/quill/quill.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/companyTemplate/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/companyTemplate/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

</body>

</html>

