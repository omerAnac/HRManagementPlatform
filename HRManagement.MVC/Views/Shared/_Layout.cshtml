@using HRManagement.ViewModel.PackageVM
@model List<PackageVM>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Shop Homepage - Start Bootstrap Template</title>
    <!-- Favicon//-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/MainPage/css/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="#!">Purple HR</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" asp-action="Index" asp-controller="Home">AnaSayfa</a></li>
                   
                   
                </ul>
                <form class="d-flex">
                    <button class="btn btn-outline-dark" asp-action="Index" asp-controller="Login" type="submit">
                        <i class="animsition-link bi bi-box-arrow-in-right me-1" ></i>
                        Kullanıcı Girişi
                    </button>
                </form>
            </div>
        </div>
    </nav>
    <!-- Header-->
    @RenderBody()
    <header class="py-5" style="background-color:#fc2c77">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Purple Akademi  </h1>
                <p>İnsan Kaynakları Eğitim ve Danışmanlık Hizmetleri</p>
            </div>
        </div>
    </header>
    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                
                @foreach (var item in Model)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                        <img class="card-img-top" src="@item.ImageURL" alt="..." />
                            <!-- Product details-->
                        <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                <h5 class="fw-bolder">@item.Name</h5>
                                    <!-- Product price-->
                                @item.Price ₺
                                </div>
                            </div>
                            <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Paket İçeriğini Göster</a></div>
                            </div>
                        </div>
                    </div>

                }

            </div>
        </div>
    </section>
    <!-- Footer-->
    <footer class="py-5" style="background-color:#fc2c77">
        <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2022</p></div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/MainPage/js/scripts.js"></script>
</body>
</html>
